{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "outDir": "dist/server",
        "removeComments": true,
        "preserveConstEnums": true,
        "types": ["node"],
        "target": "es2020"
    },
    "include": [
        "typings/main.d.ts",
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}
